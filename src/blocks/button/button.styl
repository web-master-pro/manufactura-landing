.button
    display inline-block
    width 270px
    background-color #1b1b1a
    border none
    outline none
    color white
    font(Light, 40)
    font-size 16px
    line-height 1
    text-align center
    padding 21px 20px 19px
    text-decoration none
    position relative
    &::before
        content ""
        display block
        width 100%
        height 0
        position absolute
        top 0
        left 0
        right 0
        background-color #333
        transition height .5s ease .2s
    &:hover
        color @color
        text-decoration none
        &::before
            height 100%
            transition height .5s ease

    span
        position relative
        z-index 10

