.radio
    display block
    width 100%
    padding-left 65px
    margin 0 0 50px
    +below(991px)
        margin-bottom 20px
        padding-left 40px
    +below(479px)
        padding-left 20px
        margin-bottom 15px

    &__radio
        display inline-block
        padding 0
        margin 0
        opacity 0

    &__label
        display block
        color #bfbfbf
        font(Extra)
        font-size 32px
        line-height 1
        text-transform uppercase
        margin 0
        padding 0 0 0 40px
        position relative
        cursor pointer
        background-image embedurl("../../svg/checkbox.svg","")
        background-size 19px 19px
        background-position left 2px
        background-repeat no-repeat
        position relative
        span
            position relative
            display inline-block
            z-index 100
            padding-right 20px
            background-color #fff
        +below(479px)
            font-size 24px
            background-position left 0


    &__radio:checked + &__label
        color black
        background-image embedurl("../../svg/checkbox-checked.svg","")
        &::after
            content ""
            display block
            background-color #000
            height 1px
            position absolute
            left 50%
            right 0
            top 50%
            z-index 1
