.nav
    padding 0
    position absolute
    z-index 500
    overflow hidden
    width 100%
    height 0
    opacity 0
    transition all .9s ease
    &.on
        width 100%
        height 100%
        transition all .9s ease
        opacity 1


    &__menu
        list-style none
        font-size 0
        padding 0
        margin 0
        +above(768px)
            display flex
            flex-flow row nowrap
            justify-content flex-start

    &__item
        display inline-block
        color #585858
        font(Light)
        font-size 18px
        line-height 1
        padding 0
        margin 0 42px 0 0
        +below(767px)
            display block
            margin 0 0 40px 0

    &__link
        color #585858
        text-decoration none
        position relative
        transition all .3s ease .3s
        padding-bottom 1px
        &::after
            content ""
            display block
            width 0px
            height 1px
            background-color #585858
            position absolute
            left 50%
            right 50%
            bottom 0
            transition all .3s ease
        &:hover
        &.active
            color @color
            text-decoration none
            &::after
                width 100%
                left 0
                right 0

