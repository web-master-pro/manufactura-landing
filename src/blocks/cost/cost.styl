.cost
    width 100%
    background-color #fff

    &__in
        container(1210px)
        padding 175px 20px 170px
        min-height 534px
        +below(767px)
            padding 70px 20px 70px
            min-height auto

    &__title
        max-width 700px
        color black
        font(Extra)
        font-size 58px
        line-height 1.25
        text-transform uppercase
        margin 0 0 20px
        +below(1100px)
            text-align center
            margin 0 auto 20px
        +below(479px)
            font-size 36px

    &__text
        color #939393
        font(Light)
        font-size 30px
        line-height 1
        margin 0
        +below(1100px)
            text-align center
        +below(479px)
            font-size 22px

    &__button-block
        width 100%
        max-width 437px
        border-top 1px solid black
        padding-top 47px
        text-align right
        position absolute
        top 202px
        right 20px
        +below(1200px)
            max-width 350px
        +below(1100px)
            position relative
            top auto
            right auto
            text-align center
            max-width 500px
            margin 50px auto 0
        +below(479px)
            padding-top 40px
            margin-top 40px


