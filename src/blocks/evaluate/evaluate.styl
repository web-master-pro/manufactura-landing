.evaluate
    width 100%
    &__in
        container(1210px)
        padding 340px 20px 130px
        +below(1250px)
            padding 210px 20px 70px
        +below(991px)
            padding 100px 20px 50px
            min-height auto

    &__title
        color black
        font(Extra)
        font-size 58px
        line-height 1.25
        text-transform uppercase
        margin 0 0 120px
        +below(991px)
            text-align center
            margin-bottom 90px
        +below(767px)
            font-size 48px
            margin-bottom 70px
        +below(479px)
            font-size 34px
            margin-bottom 50px

    &__cards
        width 100%
        padding 0
        margin 0
        display flex
        flex-flow row wrap
        justify-content space-between
        +below(1200px)
            justify-content space-around

.card
    display table
    flex 0 0 370px
    width 370px
    height 162px
    border 2px solid black
    color #727272
    font(Regular,40)
    font-size 20px
    line-height 1.2
    padding 0
    margin 0 5px 30px
    text-decoration none
    padding 40px 15px 40px 90px
    position relative
    box-shadow 8px 20px 50px rgba(0, 0, 0, 0.01)
    transition all .3s ease
    &::before
        content ""
        position absolute
        top 0
        left 0
        width 100%
        height 0
        background-color #f4f4f4
        transition all .3s ease .3s
    &::after
        content ""
        display block
        background-size contain
        background-repeat no-repeat
        background-position 0 0
    &--phone
        &::after
            size 24px 41px
            background-image embedurl("../../svg/phone.svg","")
            position absolute
            left 35px
            top 50%
            margin-top -21px
            +below(479px)
                size 18px 30px
                left 16px
                margin-top -15px
    &--skype
        &::after
            size 39px 39px
            background-image embedurl("../../svg/skype.svg","")
            position absolute
            left 28px
            top 50%
            margin-top -20px
            +below(479px)
                size 25px 25px
                left 13px
                margin-top -13px
    &--email
        &::after
            size 36px 26px
            background-image embedurl("../../svg/mail.svg","")
            position absolute
            left 30px
            top 50%
            margin-top -13px
            +below(479px)
                size 25px 18px
                left 13px
                margin-top -9px

    &:hover
        text-decoration none
        box-shadow 8px 20px 50px rgba(0, 0, 0, 0.18)
        &::before
            // height 100%
            transition all .3s ease 0s

    +below(479px)
        flex 0 0 280px
        max-width 280px
        height 80px
        padding 15px 10px 15px 50px
        margin-bottom 20px

    &__text
        display table-cell
        vertical-align middle
        border-left 2px solid #000
        padding-left 30px
        font-size 16px
        position relative
        z-index 50
        &::first-line
            color black
            font-size 20px
        +below(479px)
            font-size 14px
            padding-left 15px
            border-left 1px solid #000
            &::first-line
                font-size 18px
