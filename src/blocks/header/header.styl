.header
    width 100%
    position relative
    background-color #fff
    background-image url(img/header-bg.jpg)
    background-repeat no-repeat
    background-position center center
    background-size cover
    +below(767px)
        background-position right center

    &__in
        container(1000px)
        padding 250px 20px 40px
        min-height 990px
        +below(767px)
            padding-top 210px
            min-height auto
        +below(479px)
            padding-top 180px

    &__button-nav
        position absolute
        top 80px
        left 20px
        +below(767px)
            top 20px
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 0s
                opacity 0

    &__nav
        position absolute
        top 90px
        left 260px
        +below(991px)
            left 140px
        +below(767px)
            top 100px
            left 20px
        +below(480px)
            top 80px


    &__logo
        display block
        width 350px
        height 68px
        background-image url(img/logo.svg)
        background-repeat no-repeat
        background-size contain
        position absolute
        top 65px
        left 50%
        margin-left -175px
        transition opacity .5s ease .3s
        +below(991px)
            left 80px
            margin-left 0
        +below(767px)
            top 20px
            left 50%
            margin-left -175px
        +below(520px)
            width auto
            left 90px
            right 20px
            margin-left 0
        ^[0].on &
            +above(768px)
                opacity .05 !important
                transition opacity .5s ease
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 0s
                opacity 0


    &__phone-block
        display inline-block
        max-width 230px
        position absolute
        top 85px
        right 20px
        text-align right
        transition opacity .5s ease .3s
        +below(767px)
            display block
            width 100%
            text-align center
            margin 0 auto
            top 105px
            right auto
            left 50%
            margin-left -115px
        +below(400px)
            top 90px
        ^[0].on &
            opacity .05 !important
            transition opacity .5s ease
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 0s
                opacity 0

    &__phone
        display inline-block
        color #3b3f43
        font()
        font-size 18px
        line-height 1
        text-transform uppercase
        padding-left 22px
        margin 0 0 10px
        position relative
        text-decoration none
        &:hover
            color @color
            text-decoration none
        &::before
            content ""
            display block
            width 15px
            height 15px
            background-image embedurl("../../svg/callback.svg", "")
            background-repeat no-repeat
            background-position 0 0
            background-size cover
            position absolute
            top 0
            left 0

    &__call
        display inline-block
        color #585858
        font(Light)
        font-size 16px
        line-height 1
        text-decoration none
        margin 0
        padding-bottom 0
        transition all .3s ease .3s
        position relative
        &::after
            content ""
            display block
            width 100%
            height 1px
            background-color #333
            position absolute
            left 0
            right 0
            bottom 0
            transition all .3s ease
        &:hover
            color @color
            text-decoration none
            &::after
                width 0px
                height 1px
                left 50%
                right 50%
                bottom 0


    &__headers
        display block
        width 670px
        height 474px
        background url(img/header-frame.png) no-repeat left top
        padding-top 112px
        padding-left 85px
        position absolute
        top 250px
        left 50%
        margin-left -185px
        transition opacity .5s ease .3s
        +below(1100px)
            left auto
            margin-left 0
            right 20px
        +below(767px)
            width 100%
            height auto
            background none
            padding 0
            position relative
            top auto
            left auto
            right auto
            margin 0
            text-align center
        ^[0].on &
            +below(767px)
                opacity .02 !important
                transition opacity .5s ease
        &.animated
            +above(768px)
                animation-duration 4s
                animation-delay 0s
                opacity 0

    &__title
        color black
        font(Extra)
        font-size 49px
        line-height 1
        text-transform uppercase
        margin 0 0 20px
        +below(767px)
            text-align center
        +below(479px)
            font-size 36px
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 0s
                opacity 0

    &__subtitle
        color black
        font()
        font-size 30px
        line-height 1
        padding-bottom 20px
        margin 0 0 20px
        position relative
        &::after
            content ""
            display block
            width 60px
            height 1px
            background-color #363636
            position absolute
            bottom 0
            left 0
            +below(767px)
                left 50%
                margin-left -30px
        +below(479px)
            font-size 24px

        strong
            font(Bold)
        +below(767px)
            text-align center
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 0.5s
                opacity 0

    &__cost
        color #393939
        font(Light,40)
        font-size 20px
        line-height 1
        margin 0 0 35px
        +below(767px)
            text-align center
        +below(479px)
            font-size 16px
            br
                display none
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 1.0s
                opacity 0

    &__button
        width 203px
        &.animated
            +above(768px)
                animation-duration 2s
                animation-delay 1.5s
                opacity 0



