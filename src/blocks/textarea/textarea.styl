.textarea
    display block
    width 100%
    padding 0
    position relative

    &__textarea
        display block
        width 100%
        height 178px
        background-color white
        border 2px solid black
        outline none
        color black
        font(Light)
        font-size 18px
        line-height 1.2
        padding 20px
        resize none
        position relative
        z-index 1


    &__placeholder
        display inline-block
        color black
        font(Light)
        font-size 18px
        position absolute
        top 0
        left 0
        right 0
        padding 20px
        z-index 2


