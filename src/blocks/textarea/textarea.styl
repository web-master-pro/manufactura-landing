.textarea
    display block
    width 100%
    padding 0
    position relative

    &__textarea
        display block
        width 100%
        height 193px
        background-color white
        border 2px solid black
        outline none
        color black
        font(Light)
        font-size 18px
        line-height 1.2
        padding 30px 35px
        resize none
        position relative
        z-index 1
        +below(1170px)
            height 178px
        +below(767px)
            padding 20px

    &__placeholder
        display inline-block
        color black
        font(Light)
        font-size 18px
        position absolute
        top 0
        left 0
        right 0
        padding 30px 35px
        z-index 2
        +below(767px)
            padding 20px

